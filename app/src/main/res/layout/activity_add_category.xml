<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCategoryActivity">


    <EditText
        android:id="@+id/category_name_ed"
        android:layout_width="384dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Enter category name"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_imageView" />

    <EditText
        android:id="@+id/category_amount_ed"
        android:layout_width="384dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Enter goal for categories"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_name_ed" />

    <ImageView
        android:id="@+id/category_imageView"
        android:layout_width="392dp"
        android:layout_height="226dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/image_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_title_et" />

    <TextView
        android:id="@+id/category_title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Add Category"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_category_button"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:layout_marginBottom="52dp"
        android:padding="12dp"
        android:text="Create Category"
        app:cornerRadius="10dp"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.button.MaterialButton>

    <ProgressBar
        android:id="@+id/category_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="56dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/create_category_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_amount_ed"
        app:layout_constraintVertical_bias="0.575" />

    <ImageView
        android:id="@+id/categoryCameraButton"
        android:layout_width="81dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_imageView"
        app:layout_constraintEnd_toEndOf="@+id/category_imageView"
        app:layout_constraintStart_toStartOf="@+id/category_imageView"
        app:layout_constraintTop_toTopOf="@+id/category_imageView"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>